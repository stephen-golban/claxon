  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@neondatabase/serverless": "^1.0.1",
    "better-auth": "^1.2.12",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.4",
    "twilio": "^5.7.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/node": "^24.0.13",
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.4.0"
  }
}
